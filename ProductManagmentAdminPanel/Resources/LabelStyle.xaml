<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Style TargetType="TextBlock" x:Key="LabelStyleForCreateRide">
        <Setter Property="Margin">
            <Setter.Value>20,5,0,20</Setter.Value>
        </Setter>
        <Setter Property="FontSize">
            <Setter.Value>20</Setter.Value>
        </Setter>
        <Setter Property="Foreground">
            <Setter.Value>White</Setter.Value>
        </Setter>
        <Setter Property="FontFamily">
            <Setter.Value>Verdana</Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="TextBox" x:Key="MaterialTextBox">
        <Setter Property="Margin">
            <Setter.Value>20,25,0,60</Setter.Value>
        </Setter>
        <Setter Property="FontSize">
            <Setter.Value>24</Setter.Value>
        </Setter>


    </Style>
</ResourceDictionary>
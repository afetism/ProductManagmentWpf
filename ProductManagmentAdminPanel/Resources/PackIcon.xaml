<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style x:Key="IconPick" TargetType="materialDesign:PackIcon">
        <Setter Property="Margin">
            <Setter.Value>10</Setter.Value>
        </Setter>
        <Setter Property="Foreground">
            <Setter.Value>Red</Setter.Value>
        </Setter>
        <Setter Property="VerticalAlignment">
            <Setter.Value>Center</Setter.Value>
        </Setter>
        <Setter Property="Height">
            <Setter.Value>35</Setter.Value>
        </Setter>
        <Setter Property="Width">
            <Setter.Value>50</Setter.Value>
        </Setter>
    </Style>
    
    
</ResourceDictionary>